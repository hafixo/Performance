<?xml version="1.0" encoding="UTF-8"?>
<project name="reminders" default="all">
  
  
  <property file="reminders.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="../../usr/lib/jvm/icedtea-bin-8/jre/lib/charsets.jar"/>
      <include name="../../usr/lib/jvm/icedtea-bin-8/jre/lib/ext/cldrdata.jar"/>
      <include name="../../usr/lib/jvm/icedtea-bin-8/jre/lib/ext/dnsns.jar"/>
      <include name="../../usr/lib/jvm/icedtea-bin-8/jre/lib/ext/jaccess.jar"/>
      <include name="../../usr/lib/jvm/icedtea-bin-8/jre/lib/ext/localedata.jar"/>
      <include name="../../usr/lib/jvm/icedtea-bin-8/jre/lib/ext/nashorn.jar"/>
      <include name="../../usr/lib/jvm/icedtea-bin-8/jre/lib/ext/sunec.jar"/>
      <include name="../../usr/lib/jvm/icedtea-bin-8/jre/lib/ext/sunjce_provider.jar"/>
      <include name="../../usr/lib/jvm/icedtea-bin-8/jre/lib/ext/sunpkcs11.jar"/>
      <include name="../../usr/lib/jvm/icedtea-bin-8/jre/lib/ext/zipfs.jar"/>
      <include name="../../usr/lib/jvm/icedtea-bin-8/jre/lib/jce.jar"/>
      <include name="../../usr/lib/jvm/icedtea-bin-8/jre/lib/jsse.jar"/>
      <include name="../../usr/lib/jvm/icedtea-bin-8/jre/lib/management-agent.jar"/>
      <include name="../../usr/lib/jvm/icedtea-bin-8/jre/lib/resources.jar"/>
      <include name="../../usr/lib/jvm/icedtea-bin-8/jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.maven:_com.googlecode.json-simple:json-simple:1.1.1.classpath">
    <pathelement location="${path.variable.maven_repository}/com/googlecode/json-simple/json-simple/1.1.1/json-simple-1.1.1.jar"/>
  </path>
  
  <path id="library.maven:_commons-logging:commons-logging:1.2.classpath">
    <pathelement location="${path.variable.maven_repository}/commons-logging/commons-logging/1.2/commons-logging-1.2.jar"/>
  </path>
  
  <path id="library.maven:_junit:junit:4.10.classpath">
    <pathelement location="${path.variable.maven_repository}/junit/junit/4.10/junit-4.10.jar"/>
  </path>
  
  <path id="library.maven:_org.apache.httpcomponents:httpclient:4.5.5.classpath">
    <pathelement location="${path.variable.maven_repository}/org/apache/httpcomponents/httpclient/4.5.5/httpclient-4.5.5.jar"/>
  </path>
  
  <path id="library.maven:_org.apache.httpcomponents:httpcore:4.4.9.classpath">
    <pathelement location="${path.variable.maven_repository}/org/apache/httpcomponents/httpcore/4.4.9/httpcore-4.4.9.jar"/>
  </path>
  
  <path id="library.maven:_org.junit.jupiter:junit-jupiter-api:5.1.1.classpath">
    <pathelement location="${path.variable.maven_repository}/org/junit/jupiter/junit-jupiter-api/5.1.1/junit-jupiter-api-5.1.1.jar"/>
  </path>
  
  <path id="library.maven:_org.junit.platform:junit-platform-commons:1.1.1.classpath">
    <pathelement location="${path.variable.maven_repository}/org/junit/platform/junit-platform-commons/1.1.1/junit-platform-commons-1.1.1.jar"/>
  </path>
  
  <path id="library.maven:_org.opentest4j:opentest4j:1.0.0.classpath">
    <pathelement location="${path.variable.maven_repository}/org/opentest4j/opentest4j/1.0.0/opentest4j-1.0.0.jar"/>
  </path>
  
  <path id="library.maven:_org.testng:testng:6.14.3.classpath">
    <pathelement location="${path.variable.maven_repository}/org/testng/testng/6.14.3/testng-6.14.3.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module Reminders -->
  
  <dirname property="module.reminders.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.reminders" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.reminders" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.reminders" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.reminders" value="-encoding UTF-8 -source 1.7 -target 1.7 ${compiler.args}"/>
  
  <property name="reminders.output.dir" value="${path.variable.classpath}"/>
  <property name="reminders.testoutput.dir" value="${module.reminders.basedir}/target/test-classes"/>
  
  <path id="reminders.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="reminders.module.production.classpath">
    <path refid="${module.jdk.classpath.reminders}"/>
    <pathelement location="${basedir}/ojdbc7.jar"/>
    <path refid="library.maven:_org.apache.httpcomponents:httpclient:4.5.5.classpath"/>
    <path refid="library.maven:_com.googlecode.json-simple:json-simple:1.1.1.classpath"/>
    <path refid="library.maven:_junit:junit:4.10.classpath"/>
    <path refid="library.maven:_org.testng:testng:6.14.3.classpath"/>
    <path refid="library.maven:_org.apache.httpcomponents:httpcore:4.4.9.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.2.classpath"/>
  </path>
  
  <path id="reminders.runtime.production.module.classpath">
    <pathelement location="${reminders.output.dir}"/>
    <pathelement location="${basedir}/ojdbc7.jar"/>
    <path refid="library.maven:_org.apache.httpcomponents:httpclient:4.5.5.classpath"/>
    <path refid="library.maven:_com.googlecode.json-simple:json-simple:1.1.1.classpath"/>
    <path refid="library.maven:_junit:junit:4.10.classpath"/>
    <path refid="library.maven:_org.testng:testng:6.14.3.classpath"/>
    <path refid="library.maven:_org.apache.httpcomponents:httpcore:4.4.9.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.2.classpath"/>
  </path>
  
  <path id="reminders.module.classpath">
    <pathelement location="${reminders.output.dir}"/>
    <path refid="${module.jdk.classpath.reminders}"/>
    <pathelement location="${basedir}/ojdbc7.jar"/>
    <path refid="library.maven:_org.apache.httpcomponents:httpclient:4.5.5.classpath"/>
    <path refid="library.maven:_com.googlecode.json-simple:json-simple:1.1.1.classpath"/>
    <path refid="library.maven:_junit:junit:4.10.classpath"/>
    <path refid="library.maven:_org.testng:testng:6.14.3.classpath"/>
    <path refid="library.maven:_org.junit.jupiter:junit-jupiter-api:5.1.1.classpath"/>
    <path refid="library.maven:_org.opentest4j:opentest4j:1.0.0.classpath"/>
    <path refid="library.maven:_org.junit.platform:junit-platform-commons:1.1.1.classpath"/>
    <path refid="library.maven:_org.apache.httpcomponents:httpcore:4.4.9.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.2.classpath"/>
  </path>
  
  <path id="reminders.runtime.module.classpath">
    <pathelement location="${reminders.testoutput.dir}"/>
    <pathelement location="${reminders.output.dir}"/>
    <pathelement location="${basedir}/ojdbc7.jar"/>
    <path refid="library.maven:_org.apache.httpcomponents:httpclient:4.5.5.classpath"/>
    <path refid="library.maven:_com.googlecode.json-simple:json-simple:1.1.1.classpath"/>
    <path refid="library.maven:_junit:junit:4.10.classpath"/>
    <path refid="library.maven:_org.testng:testng:6.14.3.classpath"/>
    <path refid="library.maven:_org.junit.jupiter:junit-jupiter-api:5.1.1.classpath"/>
    <path refid="library.maven:_org.opentest4j:opentest4j:1.0.0.classpath"/>
    <path refid="library.maven:_org.junit.platform:junit-platform-commons:1.1.1.classpath"/>
    <path refid="library.maven:_org.apache.httpcomponents:httpcore:4.4.9.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.2.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.reminders">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.reminders">
    <patternset refid="excluded.from.module.reminders"/>
  </patternset>
  
  <path id="reminders.module.sourcepath">
    <dirset dir="${module.reminders.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
      <include name="src/main/bash"/>
    </dirset>
  </path>
  
  <path id="reminders.module.test.sourcepath">
    <dirset dir="${module.reminders.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.reminders" depends="compile.module.reminders.production,compile.module.reminders.tests" description="Compile module Reminders"/>
  
  <target name="compile.module.reminders.production" depends="register.custom.compilers" description="Compile module Reminders; production classes">
    <mkdir dir="${reminders.output.dir}"/>
    <javac2 destdir="${reminders.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.reminders}/javac">
      <compilerarg line="${compiler.args.reminders}"/>
      <bootclasspath refid="reminders.module.bootclasspath"/>
      <classpath refid="reminders.module.production.classpath"/>
      <src refid="reminders.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.reminders"/>
    </javac2>
    
    <copy todir="${reminders.output.dir}">
      <fileset dir="${module.reminders.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.reminders.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.reminders.basedir}/src/main/bash">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.reminders.tests" depends="register.custom.compilers,compile.module.reminders.production" description="compile module Reminders; test classes" unless="skip.tests">
    <mkdir dir="${reminders.testoutput.dir}"/>
    <javac2 destdir="${reminders.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.reminders}/javac">
      <compilerarg line="${compiler.args.reminders}"/>
      <bootclasspath refid="reminders.module.bootclasspath"/>
      <classpath refid="reminders.module.classpath"/>
      <src refid="reminders.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.reminders"/>
    </javac2>
    
    <copy todir="${reminders.testoutput.dir}">
      <fileset dir="${module.reminders.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.reminders" description="cleanup module">
    <delete dir="${reminders.output.dir}"/>
    <delete dir="${reminders.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.reminders" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.reminders" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>